{
  "title": "Change right cmd key to left_command + space (personal)",
  "rules": [
    {
      "description": "Change right cmd to left_command + space if pressed alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    }
  ]
}
