{
  "title": "Change shift key (personal)",
  "rules": [
    {
      "description": "Change left_shift to ( if pressed alone (rev 2)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "9",
              "modifiers": "left_shift"
            }
          ]
        }
      ]
    },
    {
      "description": "Change right_shift to ) if pressed alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "0",
              "modifiers": "right_shift"
            }
          ]
        }
      ]
    }
  ]
}
